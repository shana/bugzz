<?xml version="1.0" encoding="UTF-8" ?>
<bugzilla>
  <supportedVersions>
    <version name="3.0" label="3.0" default="true"/>
  </supportedVersions>

  <mimeTypes>
    <type name="xml">
      <string value="application/xml"/>
      <string value="text/xml"/>
    </type>

    <type name="rdf">
      <string value="application/rdf+xml"/>
      <string value="text/rdf"/>
    </type>

    <type name="html">
      <string value="text/html"/>
    </type>
  </mimeTypes>

  <version value="3.0">
    <urls>
      <url name="initial" value="query.cgi?format=advanced"/>
      <url name="buglist" value="buglist.cgi" />
      <url name="show_bug" value="show_bug.cgi"/>
      <url name="post_bug" value="post_bug.cgi"/>
    </urls>

    <formNames>
      <form name="changeform" value="changeform"/>
      <form name="login" value="login"/>
    </formNames>

    <variables>
      <initial>
	      <variable name="classification" value="classification"/>
	      <variable name="product" value="product"/>
	      <variable name="component" value="component"/>
	      <variable name="version" value="version"/>
	      <variable name="target_milestone" value="target_milestone"/>
	      <variable name="bug_file_loc_type" value="bug_file_loc_type"/>
	      <variable name="status_whiteboard_type" value="status_whiteboard_type"/>
	      <variable name="keywords_type" value="keywords_type"/>
	      <variable name="bug_status" value="bug_status"/>
	      <variable name="resolution" value="resolution"/>
	      <variable name="bug_severity" value="bug_severity"/>
	      <variable name="priority" value="priority"/>
	      <variable name="rep_platform" value="rep_platform"/>
	      <variable name="op_sys" value="op_sys"/>
      </initial>

      <search>
        <variable name="bug_status" value="bug_status"/>
        <variable name="email1" value="email1"/>
        <variable name="emailtype1" value="emailtype1"/>
        <variable name="emailassigned_to1" value="emailassigned_to1"/>
        <variable name="emailinfoprovider1" value="emailinfoprovider1"/>
      </search>

      <login>
	<variable name="bugzilla_password" value="Bugzilla_password"/>
	<variable name="bugzilla_login" value="Bugzilla_login"/>
      </login>
    </variables>
  </version>
</bugzilla>
